<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/profileScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Select a new avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileScreenTitle"
        android:stretchColumns="*">

        <TableRow>

            <ImageView
                android:id="@+id/iconid00"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:src="@drawable/icon_00"
                android:onClick="SetTeamIcon"/>

            <ImageView
                android:id="@+id/iconid01"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:src="@drawable/icon_01"
                android:onClick="SetTeamIcon"/>

            <ImageView
                android:id="@+id/iconid02"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:src="@drawable/icon_02"
                android:onClick="SetTeamIcon"/>

        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/iconid03"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:src="@drawable/icon_03"
                android:onClick="SetTeamIcon"/>

            <ImageView
                android:id="@+id/iconid04"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:src="@drawable/icon_04"
                android:onClick="SetTeamIcon"/>

            <ImageView
                android:id="@+id/iconid05"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:src="@drawable/icon_05"
                android:onClick="SetTeamIcon"/>

        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/iconid06"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:src="@drawable/icon_06"
                android:onClick="SetTeamIcon"/>

            <ImageView
                android:id="@+id/iconid07"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:src="@drawable/icon_07"
                android:onClick="SetTeamIcon"/>

            <ImageView
                android:id="@+id/iconid08"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:src="@drawable/icon_08"
                android:onClick="SetTeamIcon"/>

        </TableRow>


    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>